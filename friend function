#include <iostream>
using namespace std;

class B;

class A {
private:
    int numA;
public:
    A() : numA(5) {}
    friend void showSum(A, B);  
};
class B {
private:
    int numB;
public:
    B() : numB(10) {}
    friend void showSum(A, B); 
};
void showSum(A objA, B objB) {
    cout << "Sum = " << objA.numA + objB.numB << endl;
}

int main() {
    A a;
    B b;
    showSum(a, b);
    return 0;
}
