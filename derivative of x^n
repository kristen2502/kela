#include <stdio.h>
#include <math.h>

// Function: f(x) = x^n
double f(double x, int n) {
    return pow(x, n);
}

double f_derivative(double x, int n) 
{
    return n * pow(x, n - 1);
}

int main() {
    double x;
    int n;
    printf("Enter the value of x: ");
    scanf("%lf", &x);
    printf("Enter the value of n (power): ");
    scanf("%d", &n);
    double fx = f(x, n);
    double dfx = f_derivative(x, n);

    printf("f(x) = x^%d = %.4f\n", n, fx);
    printf("f'(x) = %d * x^(%d) = %.4f\n", n, n-1, dfx);

    return 0;
}

