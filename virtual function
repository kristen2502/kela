#include <iostream>

class Animal 
{
public:
    virtual void makeSound() 
	{
        std::cout << "\nThe animal makes a sound." << std::endl;
    }
};

class Dog : public Animal 
{
public:
    void makeSound() 
	{
        std::cout <<"dog"<<"\t==\t"<< "Woof!" << std::endl;
    }
};

class Cat : public Animal 
{
public:
    void makeSound() 
	{
        std::cout <<"\ncat"<<"\t==\t"<< "Meow!" << std::endl;
    }
};

int main() 
{
    Animal* animal1 = new Dog();
    animal1->makeSound(); 

 
    Animal* animal2 = new Cat();
    animal2->makeSound();

    Animal* animal3 = new Animal();
    animal3->makeSound(); 

    delete animal1;
    delete animal2;
    delete animal3;

    return 0;
}
