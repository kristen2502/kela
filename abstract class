#include <iostream>
using namespace std;

class Shape 
{
public:
    virtual void draw() = 0;
};
class Circle : public Shape 
{
public:
    void draw()
	 {
        cout << "Drawing Circle" << endl;
    }
};
class Square : public Shape 
{
public:
    void draw()
	 {
        cout << "\nDrawing Square" << endl;
    }
};

int main() 
{

    Circle c;
    Square q;

    Shape *ptr;

    ptr = &c;
    ptr->draw();

    ptr = &q;
    ptr->draw(); 
}
